#Phalyfusion config

plugins:
    usePlugins:
        - phan
        - phpstan
        - psalm
    runCommands:
        phan:    bin/phan -k .phan/config2.php   --output-mode "ot sos"
        phpstan: bin/phpstan analyse -c phpstan.neon --error-format sas
        psalm:   "bin/psalm -c 'p salm.xml' --output-format=checkst"

